<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="School English" Height="270" Width="291">
    <Grid>

        <GroupBox Header="Login" Margin="10,0,10,10">
            <Grid Margin="10,0,1,0">
                <TextBox Name="txtU" Height="20" Width="210" HorizontalAlignment="Left"
                     VerticalAlignment="Top" Text="Usuário" Margin="10,30,0,0" />
                <TextBox Name="txtS" Height="20" Width="210" HorizontalAlignment="Left"
                     VerticalAlignment="Top" Text="Senha" Margin="10,81,0,0" />
                <Button Height="20" Width="210" Content="Acessar" HorizontalAlignment="Left" 
                           VerticalAlignment="Top" Margin="10,126,0,0" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
